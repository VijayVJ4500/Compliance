pipeline {
    agent any

    triggers {
        pollSCM '*/1 * * * *'
    }

    stages {
        stage('Build') {
            steps {
                echo "Building.."
                bat '''
                cd example-flask-curd
                python -m venv venv
                call venv\\Scripts\\activate
                python -m pip install 
                python -m pip install -r requirements.txt
                '''
            }
        }
        stage('Test') {
            steps {
                echo "Testing.."
                bat '''
                cd example-flask-curd
                call venv\\Scripts\\activate
                python curdapp.py
                '''
            }
        }
        stage('Deliver') {
            steps {
                echo 'Deliver....'
                bat '''
                echo "doing delivery stuff.."
                '''
            }
        }
    }
}
