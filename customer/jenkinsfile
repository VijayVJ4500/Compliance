pipeline {
    agent any

    triggers{
            pollSCM '*/1 * * * *'
      }
    stages {
        stage('Build') {
            steps {
                echo "Building.."
                bat '''
                cd customer
                python -m pip install --upgrade pip setuptools wheel
                python -m pip install -r requirements.txt
                '''
            }
        }
        stage('Test') {
            steps {
                echo "Testing.."
                bat '''
                cd customer
                python main.py
                '''
            }
        }
        stage('Deliver') {
            steps {
                echo 'Deliver....'
                bat '''
                echo "doing delivery stuff.."
                '''
            }
        }
    }
}
