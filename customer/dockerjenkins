pipeline {
    agent any

    triggers {
        pollSCM '*/1 * * * *'
    }

    stages {
        stage('Build Docker Image') {
            steps {
                echo "Building Docker Image..."
                bat '''
                docker build -t my_api_image .
                '''
            }
        }

        stage('Run Docker Container') {
            steps {
                echo "Running Docker Container..."
                bat '''
                docker run --name my_api_container -d -p 5000:5000 my_api_image
                '''
            }
        }

        stage('Test Application') {
            steps {
                echo "Testing Application..."
                bat '''
                docker exec my_api_container python -m unittest discover -s customer/tests
                '''
            }
        }

        stage('Cleanup') {
            steps {
                echo "Cleaning up..."
                bat '''
                docker stop my_api_container
                docker rm my_api_container
                '''
            }
        }
    }
}
